#!/usr/bin/env bash
# Kills process

clean_up () {
    rm  /var/run/myscript.pid
    pkill -f -15 "100-process_and_pid_file"
}

trap clean_up 'echo "I hate the kill command"' SIGTERM
trap clean_up 'echo "Y U no love me?!"' SIGINT

touch /var/run/myscript.pid
$(pgrep -f 'bash ./100-process_and_pid_file')>/var/run/myscript.pid

while true;
do
    echo "To infinity and beyond"
done
